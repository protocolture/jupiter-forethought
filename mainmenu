#!/bin/bash
##################################################################
##GLOBALS
##################################################################
hname=$(head -n 1 hostname.txt)
motd=$(shuf -n 1 motd.txt)
usrname="spscwby"
sound="yes"
source ./variables.sh
root=no
##################################################################
##################################################################
prompt()
{
#history -r ./$usrname/history.txt

bash ./td_off.sh >> /dev/null

#set -o vi
cmdprompt=$usrname$usrprompt$hname$apos
usrhist="./$usrname/history.txt"
source ./variables.sh
##CODE FOR MAIN PROMPT
trap '' 2 

#echo -ne "$cmdprompt" 
input=$(rlwrap -S $cmdprompt -H $userhist -f $userhist -o cat)

echo "$input" >> ./$usrname/history.txt
bash ./td_on.sh >> /dev/null
sleep 8

case $input in

	"LEARN")
		learn
		;&
	"LOAD")
		load-data
		;&
	"IMAGE")
		image
		;&
	"AUDIO")
		audio
		;&
	"MOTD")
		echo $motd | fmt -w 83 | pv -qL 90
		prompt
		;&
	"READ")
		read-msg
		;&
	"SEND")
		send-msg
		;&
	"ATMO")
		atmo
		;&
	"LOG")
		log
		;&
	"LAB")
		lab
		;&
	"REBOOT")
		boot
		;&
	"DATE")
		shipdate
		;&
	"TIME")
		shiptime
		;&
	"SEARCH")
		search
		;&
	"STATUS")
		shipstatus
		;&
	"LOCATE")
		locate
		;&
	"ESCALATE")
		escalate
		;&
	"WHOAMI")
		whoami
		;&
	"SCRAMBLE")
		scramble
		;&
	"POWER")
		power
		;&
	"FUCKUP")
		fuckup
		;&
	"HISTORY")
		userhistory
		;&
	"VENT")
		vent
		;&
	"VENTFUCK")
		ventfuck
		;&
	"VENTDIAG")
		ventdiag
		;&
	"USER")
		userdeets
		;&
	
	"DISINTEGRATE")
		exit 1
		;&
	*)
		echo -e "COMMAND UNRECOGNISED" | pv -qL 90
		if [ $sound = "yes" ]
then
	aplay -q UI_Terminal_Holotape_ProgramQuit_02.wav
fi   
		sleep 2
		prompt
		;;
esac
trap 2

}
