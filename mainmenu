escalate()
{
##################################################################
## ESCALATE Privs

read -p "ENTER DESIRED USERNAME: " ninput
echo "$ninput" >> ./$usrname/history.txt
case $ninput in 
			"root")
				read -p "ENTER PASSWORD: " input
				case $input in

					"STEVENSON")
						echo "WARNING: USER IS ROOT" | pv -qL 90
						sleep 0.6
						echo
						aplay -q ./ui_hacking_passgood.wav 
						root=yes
						usrname="root"
						mainmenu
						;&
					"JEKYLL")
						echo "NICE TRY MR HYDE" | pv -qL 90
						sleep 0.6
						echo
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;&
					"HYDE")
						echo "NICE TRY DR JEKYLL" | pv -qL 90
						sleep 0.6
						echo
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;&
					"HINT")
						echo "WHO IS THE AUTHOR OF THE GRISAPOLS DEMISE" | pv -qL 90
						sleep 0.6
						echo
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;&
					"DISINTEGRATE")
						exit 1
						;&
					*)
						echo -e "INCORRECT PASSWORD" | pv -qL 90
						sleep 2
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;;
					esac
			;&
			"maint")
				read -p "ENTER PASSWORD: " input
				case $input in

					"BEER")
						echo
						aplay -q ./ui_hacking_passgood.wav 
						usrname="maint"
						root=no
						mainmenu
						;&
					"HINT")
						echo "UNDER THE COUCH" | pv -qL 90
						sleep 0.6
						echo
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;&
					"DISINTEGRATE")
						exit 1
						;&
					*)
						echo -e "INCORRECT PASSWORD" | pv -qL 90
						sleep 2
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;;
				esac
			;&
			"spscwby")
				echo -e "WELCOME BACK" | pv -qL 90
				usrname="spscwby"
				root=no
				mainmenu
				;&
			*)
				echo -e "Not Recognised" | pv -qL 90
				sleep 2
				aplay -q ./ui_hacking_passbad.wav  
				prompt
			;;
		esac
sleep 0.6

}
##################################################################
scramble()
{
if [ $root = "no" ]
then 
	echo "WARNING: YOU HAVE INSUFFICIENT COMPUTER PRIVILEGES TO ACCESS THIS FUNCTION."| pv -qL 90
	sleep 2
	echo "ACCESS ATTEMPT HAS BEEN LOGGED AND WILL BE REPORTED TO YOUR MANAGER." | pv -qL 90
	prompt
fi
echo "WARNING: SCRAMBLE OF COMPUTER CORE HAS SERIOUS REPERCUSSIONS AND VOIDS YOUR WARRANTY"
read -p "Confirm by typing SCRAMBLE: " input

case $input in 				
					"SCRAMBLE")
						fuckup
						;&
					"DISINTEGRATE")
						exit 1
						;&
					*)
						echo -e "INCORRECT PASSWORD" | pv -qL 90
						sleep 2
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;;
esac
}
