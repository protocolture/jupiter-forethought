whoami()
{
echo "-------------------------------------------------"
echo "Username: $usrname"
echo "-------------------------------------------------"
echo "Root status: $root"
echo
echo

prompt

}
vent()
{
echo "..................................................WELCOME TO VENT CONTROL........................................................" | pv -qL 20

if [ $usrname != "maint" ]
then 
	echo "WARNING: YOU HAVE INSUFFICIENT COMPUTER PRIVILEGES TO ACCESS THIS FUNCTION."| pv -qL 90
	sleep 2
	echo "ACCESS ATTEMPT HAS BEEN LOGGED AND WILL BE REPORTED TO YOUR MANAGER." | pv -qL 90
	sleep 2
	prompt
fi
echo "WARNING: VENTING ATMOSPHERE IS EXTREMELY DANGEROUS"| pv -qL 90
sleep 2
echo "ONLY TAKE THIS STEP IN EXTREME CIRCUMSTANCES"| pv -qL 90
sleep 2
read -p "Confirm by typing VENT: " input

case $input in 				
					"VENT")
						ventfuck
						;&
					"DISINTEGRATE")
						exit 1
						;&
					*)
						echo -e "INCORRECT ENTRY" | pv -qL 90
						sleep 2
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;;

esac

prompt

}
userhistory()
{
cat "$usrname/history.txt"

prompt

}
userdeets()
{
cat $usrname

prompt

}
power()
{
echo " WELCOME TO POWER CONTROL" | pv -qL 90
echo "-------------------------------------------------------------------------------------------------------------------------------"| pv -qL 90
echo " Refer to operation manual for correct power selection.           " | pv -qL 90
echo "-------------------------------------------------------------------------------------------------------------------------------"| pv -qL 90

read -p "ENTER DESIRED POWER LEVEL: " ninput

echo "$ninput" >> ./$usrname/history.txt
case $ninput in 

					"1")
						aplay -q ./ui_hacking_passgood.wav 
						
						bash ./high_power.sh >> /dev/null
						prompt
						;&
					"2")
						aplay -q ./ui_hacking_passgood.wav 
						
						bash ./low_power.sh >> /dev/null
						prompt
						;&
					"3")
						aplay -q ./ui_hacking_passgood.wav 
						
						bash ./no_power.sh >> /dev/null
						prompt
						;&
					*)
						echo -e "INCORRECT ENTRY" | pv -qL 90
						sleep 2
						aplay -q ./ui_hacking_passbad.wav  
						prompt
						;;
					esac


prompt

}
ventfuck()
{
clear
sleep 2
if [ $sound = "yes" ]
then
	aplay -q UI_Terminal_Holotape_ProgramLoad_01.wav
fi   
echo -ne "VENTING\r"  | pv -qL 80
sleep 2

echo -ne "VENTING [........]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [X.......]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XX......]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXX.....]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXXX....]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXXXX...]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXXXXX..]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXXXXXX.]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXXXXXXX]\r" | pv -qL 80
sleep 2

echo -ne "VENTING [XXXXXXX.]\r" | pv -qL 80
sleep 5

echo -e "VENT Failed    " | pv -qL 80
sleep 0.6

if [ $sound = "yes" ]
then
	aplay -q UI_Terminal_Holotape_ProgramLoad_01.wav
fi   

echo "WARNING: VENTING FAILED. PLEASE CHECK VENTILATION SYSTEM USING VENTDIAG"| pv -qL 90
sleep 2

prompt
}
ventdiag()
{
echo "cat $usrname/history.txt"
clear
sleep 2
if [ $sound = "yes" ]
then
	aplay -q UI_Terminal_Holotape_ProgramLoad_01.wav
fi   
echo -ne "CHECKING VENTS\r"  | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [........]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [X.......]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XX......]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XXX.....]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XXXX....]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XXXXX...]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XXXXXX..]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XXXXXXX.]\r" | pv -qL 80
sleep 2

echo -ne "CHECKING VENTS [XXXXXXXX]\r" | pv -qL 80
sleep 2

echo -e "VENTS ARE BLOCKED. PLEASE REMOVE OBSTRUCTIONS TO RESTORE VENTILATION" | pv -qL 80
sleep 0.6
prompt

}
