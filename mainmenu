##################################################################
load-data()
{
##################################################################
##LOAD 
if [ $sound = "yes" ]
then
	aplay -q UI_Hacking_PasswordHelpAttempts.wav
fi   
source ./filesystem.sh
files=($usrname/*.txt)
x=0
echo "-------------------------------------------------" | pv -qL 90
echo "NUMBER   |     Filename                          " | pv -qL 90
echo "-------------------------------------------------" | pv -qL 90
for t in ${files[@]}; do
echo "-------------------------------------------------" | pv -qL 90
echo "$x        $t"                         | pv -qL 90
x=$((x+1))
done
echo "-------------------------------------------------" | pv -qL 90
echo
read -p "Please Select " selection
y=$((x+1))
  if [[ $selection ]] && [ $selection -eq $selection 2>/dev/null ]
  then
     echo "Valid Selection"  | pv -qL 90
	 echo
  else
     echo "INVALID INPUT"  | pv -qL 90
	 echo
	 prompt
  fi

if [ $selection -lt $x ]
then
	echo "Loading File"
	echo "----------------------------------"  | pv -qL 90
	echo
	echo "${files[$selection]}" >> ./$usrname/history.txt
	cat "${files[$selection]}" | pv -qL 90
	echo
	echo
fi
if [ $selection -eq $x ]
then
	echo "Incorrect Selection"
fi
if [ $selection -gt $x ]
then
	echo "Incorrect Selection"
fi


	
prompt
}

